@inherits Constellation.Foundation.Mvc.EditorCompatibleView<Constellation.Feature.Navigation.Models.BranchNode>

<div class="border">
	<h5 class="ml-2 mt-2"><a href="@Model.Url">@Model.GetBestLinkText()</a></h5>
	<ul class="nav flex-column">
		@foreach (var link in Model.Children)
		{
			<li class="nav-item">
				@if (link.IsActive)
				{
					<a class="nav-link active"><strong>@link.GetBestLinkText()</strong></a>

				}
				else
				{
					<a class="nav-link" href="@link.Url">@link.GetBestLinkText()</a>
				}

			</li>
		}
	</ul>
</div>